<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My novel</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <div class="header">
      <div class="header-logo">読書管理サイト</div>
      <div class="header-list">
        
      </div>
    </div>
    <div class="main">

    </div>
    <div class="container">
      <div class="container-header">
        <h1>読了リスト</h1>
        <a href="/new">新規作成</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>著者</span>
          <span>作品名</span>
        </div>


        <ul class="table-body">
          <% users.forEach((user) => { %>
            <li>
              <div class="user-data">
                <span class="id-column"><%= user.id %></span>
                <span class="writer-column"><%= user.writer %></span>
                <span class="name-column"><%= user.name %></span>
              </div>
              <div class="user-menu">
                <form action="/delete/<%= user.id %>" method="post">
                  <input type="submit" value="削除">
                </form>
                <a href="/edit/<%= user.id %>">編集</a>
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>

  </body>
</html>
